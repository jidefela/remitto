<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_row_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/image_recipient"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_group" />

        <RelativeLayout
            android:id="@+id/lyt_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/image_recipient"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Helen Kelley,Helen Kelley,Helen Kelley,Helen Kelley"
                android:textColor="@color/davygrey"
                android:layout_toLeftOf="@+id/text_status"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/text_status"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_pending"
                android:layout_gravity="center|right|end"
                android:gravity="center"
                android:text="@string/sent"
                android:textColor="@color/white"
                android:textSize="10sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/text_amount_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_names"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/image_recipient"
            android:maxLines="1"
            android:singleLine="true"
            android:text="â‚¬23.50 - Jan. 22, 2015"
            android:textColor="@color/manatee"
            android:textSize="14sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray" />


</LinearLayout>

